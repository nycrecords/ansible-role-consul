
[Unit]
Description={{ service_name }} Sidecar
Requires=consul.service
After=consul.service
[Service]
Restart=always
RestartSec=15s
User={{ consul_user }}
Group={{ consul_group }}
ExecStart={{ consul_bin_path }}/consul connect envoy -sidecar-for {{ service_id }}{% if connect_options %} {{ connect_options }} {% endif %}
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM
[Install]
WantedBy=multi-user.target
